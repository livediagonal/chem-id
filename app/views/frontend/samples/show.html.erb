<h1><%= "Sample #{@sample.id}" %></h1>
<div id="chart_div" style="width: 900px; height: 500px;"></div>
<table>
  <thead>
    <tr>
      <th>Time (minutes)</th>
      <th>Intensity (millivolts)</th>
    </tr>
  </thead>
  <tbody>
    <% @sample.hplc_data.each do |datum| %>
      <tr>
        <td><%= datum.minute %></td>
        <td><%= datum.millivolts %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
  google.charts.load('current', {'packages':['corechart']});
  google.charts.setOnLoadCallback(drawChart);

  function drawChart() {
    var data = google.visualization.arrayToDataTable(
      <%== @sample.hplc_data.map {
        |data| [data.minute, data.millivolts]
      }.unshift ['Time', 'Millivolts'] %>);

    var options = {
      title: 'Time vs. Millivolts',
      hAxis: {title: 'Time', minValue: <%== @sample.hplc_data.pluck(:minute).min %>, maxValue: <%== @sample.hplc_data.pluck(:minute).max %>},
      vAxis: {title: 'Millivolts', minValue: <%== @sample.hplc_data.pluck(:millivolts).min %>, maxValue: <%== @sample.hplc_data.pluck(:millivolts).max %>},
      legend: 'none'
    };

    var chart = new google.visualization.ScatterChart(document.getElementById('chart_div'));

    chart.draw(data, options);
  }
</script>

