<div class="uk-margin-auto uk-margin-large-top" style="width: 280px;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "uk-form-stacked" }) do |f| %>
    <div>
      <%= f.label :email, class: "uk-form-label" %>
      <div class="uk-form-controls">
        <%= f.email_field :email, autofocus: true, class: "uk-input" %>
      </div>
    </div>

    <div class="uk-margin-top">
      <%= f.label :password, class: "uk-form-label" %>
      <div class="uk-form-controls">
        <%= f.password_field :password, autocomplete: "off", class: "uk-input" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="uk-margin-small-top">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me, class: "uk-checkbox" %> Remember me
        <% end %>
      </div>
    <% end -%>

    <div class="uk-margin-top">
      <%= f.submit "Log in", class: "uk-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
